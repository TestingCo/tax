@model TaxViewModel
@{
    ViewData["Title"] = "Tax Per Year";
}
<h2>Your tax info for year @Model.Year</h2>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.Year"></label>
            <span>@Model.Year</span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.TotalIncome"></label>
            <span>@Model.TotalIncome.Value.ToString("G29")</span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CharityPaidAmount"></label>
            <span>@Model.CharityPaidAmount.Value.ToString("G29")</span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.NumberOfChildren"></label>
            <span>@Model.NumberOfChildren</span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.TaxDueAmount"></label>
            <span style="color: green;">@Model.TaxDueAmount.Value.ToString("G29")</span>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
